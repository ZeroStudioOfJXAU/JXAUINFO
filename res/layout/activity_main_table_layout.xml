                            android:layout_height="100dp"
                            android:layout_weight="0.83"
                            android:src="@drawable/ic_menu_call" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
