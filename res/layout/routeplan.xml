<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/route_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起点：" />

        <EditText
            android:id="@+id/route_start"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:ems="10"
            android:text="" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/auto_loc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动定位" />
    </LinearLayout>

    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">

		<TextView
		    android:id="@+id/route_textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   
		    android:text="终点：" />

		<EditText
		    android:id="@+id/route_end"
		    android:layout_width="182dp"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:text="" >

		    <requestFocus />
		</EditText>

		<Button
		    android:id="@+id/screen_hit_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="屏幕取点" />

    </LinearLayout>
    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip">

		 <Button
		     android:id="@+id/drive_btn"
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1.0"
		     android:layout_marginLeft="2dip"
		     android:layout_marginRight="2dip"
		     android:text="驾车搜索" />
	
		 <Button
		     android:id="@+id/transit_btn"
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1.0"
		     android:layout_marginLeft="2dip"
		     android:layout_marginRight="2dip"
		     android:text="公交搜索" />
	
		 <Button
		     android:id="@+id/walk_btn"
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1.0"
		     android:layout_marginLeft="2dip"
		     android:layout_marginRight="2dip"
		     android:text="步行搜索" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>
	
</LinearLayout>
