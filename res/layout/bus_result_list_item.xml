<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/BR_line_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text="240路长班" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text="(" />

    <TextView
        android:id="@+id/BR_start_station_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text="行政学院" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text="--->" />
    

    <TextView
        android:id="@+id/BR_end_station_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text="蓝天碧水广场" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bus_result_item"
        android:text=")" />
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bus_result_item"
            android:text="首班:" />

        <TextView
            android:id="@+id/BR_start_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bus_result_item"
            android:text="6:00" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bus_result_item"
            android:layout_marginLeft="20dp"
            android:text="末班:" />

        <TextView
            android:id="@+id/BR_end_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bus_result_item"
            android:text="20:00" />
    
    </LinearLayout>
    <include layout="@layout/bus_track_unit"/>

    <com.zero.widget.MyListView
        android:id="@+id/BR_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.zero.widget.MyListView>

</LinearLayout>